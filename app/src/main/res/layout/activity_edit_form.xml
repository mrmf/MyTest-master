<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity_edit_form">

    <EditText
        android:id="@+id/firName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/please_enter_your_first_name" />
    <EditText
        android:id="@+id/lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/please_enter_your_last_name" />
    <EditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/please_enter_your_age" />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="@string/please_enter_your_email" />

    <Button
        android:id="@+id/btnShowActivity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/approve" />
</LinearLayout>

<LinearLayout
android:layout_width="280dp"
android:layout_height="match_parent"
android:layout_gravity="left"
android:background="@color/colorPrimary">

<Button
    android:id="@+id/btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" />
</LinearLayout>

</android.support.v4.widget.DrawerLayout>